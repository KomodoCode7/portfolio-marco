---
interface Props {
    title: string;
    description: string;
    date: string;
}
const { title, description, date } = Astro.props;
---

<div class="group flex items-start space-x-3">
    <!-- Círculo -->
    <div class="relative flex items-center justify-center size-12 p-3 bg-cyan-400 rounded-full transition-transform duration-300 ease-in-out transform group-hover:scale-125 group-hover:shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-calendar-code">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M11.5 21h-5.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v6" />
            <path d="M16 3v4" />
            <path d="M8 3v4" />
            <path d="M4 11h16" />
            <path d="M20 21l2 -2l-2 -2" />
            <path d="M17 17l-2 2l2 2" />
        </svg>
    </div>
    <!-- Línea -->
    <div class="group flex items-stretch space-x-3">
        <!-- Línea ajustable -->
        <div class="w-1 h-20 bg-cyan-400 transition-all duration-300 ease-in-out group-hover:h-32"></div>
        
        <!-- Contenido adicional -->
        <div>
            <h3 class="flex items-center mb-1 text-lg font-semibold text-yellow-400/80 dark:text-white">{title}</h3>
            <time class="block mb-2 text-sm font-normal leading-none text-cyan-300 dark:text-gray-500">{date}</time>
            <p class="mb-4 text-base font-normal text-white/80 dark:text-gray-400">{description}</p>
        </div>
    </div>
    
    

</div>




