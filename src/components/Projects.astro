---
import Nextjs from "./icons/Nextjs.astro"
import Tailwind from "./icons/Tailwind.astro"
import Javascript from "./icons/Javascript.astro"
import Typescript from "./icons/Typescript.astro"
import Openai from "./icons/Openai.astro"
import Prisma from "./icons/Prisma.astro"
const TAGS = {
    NEXT: {
        name: "Next.Js",
        color: "bg-black text-white",
        icon: Nextjs 
    },
    TAILWIND: {
        name: "TailwindCSS",
        color: "bg-blue-600 text-white",
        icon: Tailwind
    },
    JAVASCRIPT: {
        name: "JavaScript",
        color: "bg-yellow-400 text-black",
        icon: Javascript
    },
    TYPESCRIPT: {
        name: "TypeScript",
        color: "bg-white text-blue-500",
        icon: Typescript
    },
    OPENAI: {
        name: "OpenAi API",
        color: "bg-green-500 text-white",
        icon: Openai
    },
    PRISMA: {
        name: "Prisma",
        color: "bg-white text-black",
        icon: Prisma
    }
}
const PROJECTS = [
    {
        title: "Koralis & Remoras - Sistema Marítimo-Logístico",
        description: `Plataforma integral para gestión de cotizaciones, registro operativo, cierres mensuales e integración con Softland. 
        Sistema en construcción con arquitectura cloud escalable: NestJS, Next.js, PostgreSQL/Neon, Cloud Run, Cloudflare R2, MS Entra ID.
        Enfocado en optimización de procesos marítimos y reducción de trabajo manual.`,
        link: "/projects/koralis",
        image: "/koralis-preview.jpg",
        tags: [TAGS.NEXT, TAGS.TYPESCRIPT, TAGS.PRISMA],
        featured: true
    },
    {
        title: "Sistema de Gestión de Información Académica - Proyecto de Título",
        description: `Plataforma web full-stack desarrollada como Proyecto de Título para la Universidad de Los Lagos. 
        Sistema que permite a directores de carrera identificar proactivamente estudiantes en riesgo académico mediante 
        dashboards interactivos y alertas automáticas. Transforma datos crudos en información accionable, facilitando 
        decisiones estratégicas para mejorar la retención y el éxito estudiantil.`,
        link: "#",
        image: "/proyecto-titulo.jpg",
        tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.TYPESCRIPT, TAGS.PRISMA],
        featured: true
    },
    {
        title: "Dr. Computín - Asistente Virtual para Problemas de Hardware",
        description: `Desarrollado con Next.js, TailwindCSS y la API de OpenAI,
     Dr. Computín es una aplicación web diseñada para ayudar a usuarios con problemas de hardware 
     en sus computadoras. Utilizando la inteligencia artificial de OpenAI, Dr. Computín 
     ofrece asistencia y diagnósticos preliminares. Además, permite al usuario generar un resumen de su problema,
     que puede compartir con un técnico de confianza para facilitar la reparación.`,
        link: "https://example.com",
        image: "/DrComputin.jpg",
        tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.OPENAI, TAGS.TYPESCRIPT, TAGS.PRISMA],
        featured: false
    },
    {
        title: "Landing Page para Fanbooks, distribuidora de libros para colegios",
        description: `Desarrollada con Next.js y TailwindCSS, esta landing page es una plataforma de presentación para Fanbooks,
         una distribuidora de libros para colegios. La página está diseñada para ser atractiva y funcional, 
         con el objetivo de presentar la empresa y sus servicios de manera clara y efectiva. Cuenta con secciones que detallan su identidad empresarial,
         las distintas editoriales asociadas y una sección de contacto para facilitar la comunicación con los interesados.`,
        link: "https://www.fanbooks.cl",
        image: "/fanbooks.png",
        tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.TYPESCRIPT],
        featured: false
    }
]
---

{
    PROJECTS.map(({ title, description, link, image, tags, featured }) => (
        <div class="mb-10">
            <article class={featured ? "rounded-xl border-2 border-yellow-400/30 bg-yellow-400/5 p-6" : ""}>
                {featured && (
                    <div class="mb-4">
                        <span class="text-xs bg-yellow-400/20 text-yellow-400 px-3 py-1 rounded-full font-medium">
                            ⭐ Proyecto Destacado
                        </span>
                    </div>
                )}
                <h3 class="text-2xl font-semibold text-yellow-400/80">{title}</h3>
                <p class="text-lg mb-4 text-pretty">{description}</p>
                <a href={link} class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors mb-4 text-sm font-medium">
                    {link.startsWith('/') ? 'Ver case study completo →' : 'Visitar sitio →'}
                </a>
                <div class="flex gap-x-2 mt-2">
                    <ul class="flex gap-x-2 flex-row flex-wrap gap-y-2">
                        {tags.map(tag => (
                        <li>
                            <span 
                            class={`flex align-center items-center gap-x-2 rounded-full text-sm font-medium ${tag.color} py-1 px-2 border-2 border-white/50 mb-5 hover:scale-110 transition-transform`}>
                                <tag.icon class="size-6"/>
                                {tag.name}
                            </span>
                        </li>
                    ))}
                    </ul>
                </div>
                {image && (
                    <img src={image} alt={title} class="rounded shadow-2xl shadow-white/10 hover:scale-105 transition-transform" />
                )}
            </article>
        </div>
    ))
}